    <script>
        // Dữ liệu lấy từ Báo cáo Google Doc (Tỷ lệ vi phạm trung bình)
        const labels = ['< 30 ngày', '31 - 60 ngày', '> 60 ngày'];
        const colorBefore = '#93c5fd'; // Blue-300
        const colorAfter = '#1d4ed8'; // Blue-700

        // Dữ liệu Sai POD
        const dataPodBefore = [9.11, 41.67, 43.91];
        const dataPodAfter = [34.78, 33.01, 37.47];

        // Dữ liệu Sai Call Log
        const dataCallLogBefore = [2.64, 15.17, 6.49];
        const dataCallLogAfter = [3.07, 3.66, 3.80];

        // Dữ liệu Sai Lý do GTB
        const dataLydoGTBBefore = [2.08, 5.72, 5.94];
        const dataLydoGTBAfter = [6.93, 6.54, 6.20];

        /**
         * Hàm khởi tạo biểu đồ dạng Bar (cột) so sánh TRƯỚC và SAU
         * @param {string} canvasId ID của thẻ canvas
         * @param {number[]} dataBefore Mảng dữ liệu giai đoạn TRƯỚC
         * @param {number[]} dataAfter Mảng dữ liệu giai đoạn SAU
         */
        function createComparisonChart(canvasId, dataBefore, dataAfter) {
            const ctx = document.getElementById(canvasId).getContext('2d');
            
            // Tìm giá trị max để đặt giới hạn trục Y
            const maxVal = Math.max(...dataBefore, ...dataAfter);

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Giai đoạn TRƯỚC',
                            data: dataBefore,
                            backgroundColor: colorBefore,
                            borderRadius: 4,
                        },
                        {
                            label: 'Giai đoạn SAU',
                            data: dataAfter,
                            backgroundColor: colorAfter,
                            borderRadius: 4,
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: {
                                usePointStyle: true,
                                padding: 20,
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    label += context.parsed.y.toFixed(2) + ' %';
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: maxVal * 1.1, // Thêm 10% cho khoảng trống
                            title: {
                                display: true,
                                text: 'Tỷ lệ Lỗi TB (%)'
                            },
                            ticks: {
                                callback: function(value) {
                                    return value + ' %';
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        }

        // Khởi tạo các biểu đồ khi DOM đã sẵn sàng
        document.addEventListener('DOMContentLoaded', () => {
            createComparisonChart('chartPod', dataPodBefore, dataPodAfter);
            createComparisonChart('chartCallLog', dataCallLogBefore, dataCallLogAfter);
            createComparisonChart('chartLydoGTB', dataLydoGTBBefore, dataLydoGTBAfter);
        });
    </script>
