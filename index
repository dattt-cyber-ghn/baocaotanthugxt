    <script>
        // Dữ liệu lấy từ Báo cáo Google Doc
        const labels = ['< 30 ngày', '31 - 60 ngày', '> 60 ngày'];
        const colors = ['#3b82f6', '#10b981', '#6b7280']; // Blue, Green, Gray

        const dataPod = [34.78, 33.01, 37.47];
        const dataCallLog = [3.07, 3.66, 3.80];
        const dataLydoGTB = [6.93, 6.54, 6.20];

        /**
         * Hàm khởi tạo biểu đồ
         * @param {string} canvasId ID của thẻ canvas
         * @param {string} chartTitle Tiêu đề của biểu đồ
         * @param {number[]} data Mảng dữ liệu
         */
        function createChart(canvasId, chartTitle, data) {
            const ctx = document.getElementById(canvasId).getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Tỷ lệ Lỗi TB (%)',
                        data: data,
                        backgroundColor: colors,
                        borderColor: colors.map(c => c.replace('2', '9')), // Slightly darker border
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false,
                        },
                        title: {
                            display: false,
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    label += context.parsed.y.toFixed(2) + ' %';
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: Math.max(...data) * 1.2, // Auto-scale max value slightly higher than max data point
                            title: {
                                display: true,
                                text: 'Tỷ lệ Lỗi (%)'
                            },
                            ticks: {
                                callback: function(value, index, values) {
                                    return value + ' %';
                                }
                            }
                        }
                    }
                }
            });
        }

        // Khởi tạo các biểu đồ khi DOM đã sẵn sàng
        document.addEventListener('DOMContentLoaded', () => {
            createChart('chartPod', 'Sai POD', dataPod);
            createChart('chartCallLog', 'Sai Call Log', dataCallLog);
            createChart('chartLydoGTB', 'Sai Cập nhật lý do GTB', dataLydoGTB);
        });
    </script>
